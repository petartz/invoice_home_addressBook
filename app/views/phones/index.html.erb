<h1>Listing phones</h1>

<table>
  <tr>
    <th>Phone number</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @phones.each do |phone| %>
  <tr>
    <td><%= phone.phone_number %></td>
    <td><%= phone.comment %></td>
    <td><%= link_to 'Show', [phone.person, phone] %></td>
    <td><%= link_to 'Edit', edit_person_phone_path(phone.person, phone) %></td>
    <td><%= link_to 'Destroy', [phone.person, phone], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Phone', new_person_phone_path(params[:person_id]) %>
