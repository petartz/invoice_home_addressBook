<h1>Listing emails</h1>

<table>
  <tr>
    <th>Email address</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @emails.each do |email| %>
  <tr>
    <td><%= email.email_address %></td>
    <td><%= email.comment %></td>
    <td><%= link_to 'Show', [email.person, email] %></td>
    <td><%= link_to 'Edit', edit_person_email_path(email.person, email) %></td>
    <td><%= link_to 'Destroy', [email.person, email], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

