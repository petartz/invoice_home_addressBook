<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Street</th>
    <th>Town</th>
    <th>Zip code</th>
    <th>State</th>
    <th>Country</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.street %></td>
    <td><%= address.town %></td>
    <td><%= address.zip_code %></td>
    <td><%= address.state %></td>
    <td><%= address.country %></td>
    <td><%= link_to 'Show', [address.person, address] %></td>
    <td><%= link_to 'Edit', edit_person_address_path(address.person, address) %></td>
    <td><%= link_to 'Destroy', [address.person, address], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Address', new_person_address_path(params[:person_id]) %>
